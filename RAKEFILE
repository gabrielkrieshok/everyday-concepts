desc 'create a new draft post'
task :post do
    require 'date'
  title = ENV['title']
  slug = "#{Date.today}-#{title.downcase.gsub(/[^\w]+/, '-')}"

  file = File.join(
    File.dirname(__FILE__),
    '_posts',
    slug + '.md'
  )

  File.open(file, "w") do |f|
    f << <<-EOS.gsub(/^    /, '')
    ---
    layout: post
    title: "#{title}"
    date: #{Date.today}
    image: /assets/images/#{title.downcase.gsub(/[^\w]+/, '-')}.png
    ---

    ![#{title}](/assets/images/#{title.downcase.gsub(/[^\w]+/, '-')}.png)
    EOS
  end

  system ("#{ENV['EDITOR']} #{file}")
end